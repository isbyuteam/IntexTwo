
@model Prediction

<div class="card border-light text-center">
    <h3 class="card-header">Predicted Severity Value</h3>
    <div class="card-block">
            @if (Model.PredictedValue > 4)
            {
                <h3 class="card-text">
                    <span class="badge badge-danger" align="center">
                        @Model.PredictedValue
                    </span>
                </h3>
            }
            else if (Model.PredictedValue > 3)
            {
                <h3 class=“card-text”>
                    <span class="badge badge-warning" align="center">
                        @Model.PredictedValue
                    </span>
                </h3>
            }
            else
            {
                <h3 class=“card-text”>
                    <span class="badge badge-primary" align="center">
                        @Model.PredictedValue
                    </span>
                </h3>
            }
        </div>
    </div>
    </br>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-dark" asp-controller="Inference" asp-action="Calculator">Back</a>
</div>

