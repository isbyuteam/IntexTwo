@{
    ViewData["Title"] = "Crashes";
}

@model CrashViewModel

<h1>Crashes</h1>

<div class="row m-1 p-1">
    <div id="types" class="col-3">
        <vc:crashes></vc:crashes>
    </div>
  
    <div class="card-group col-9">
        @foreach (var crash in Model.Crashes)
        {
            <div class="col-xl-6 col-md-12 mb-4">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body cleartfix">
                            <div class="media align-items-stretch">
                                <div class="media-body">
                                    <small class="text-muted">ID: @crash.CRASH_ID</small><br />
                                    <span class="pt-1">@crash.CITY</span><br />
                                    <span>@crash.CRASH_DATE</span>
                                    <span>@crash.CRASH_TIME</span>
                                </div>
                                <div class="row">
                                    <span class="badge bg-danger text-dark justify-content-end" style="float:right">
                                        Crash Severity: @crash.CRASH_SEVERITY_ID
                                    </span>
                                    <span class="card-text">
                                        <a class="btn btn-sm btn-info float-end" asp-controller="Home" asp-action="CrashDetails" asp-route-crashid="@crash.CRASH_ID">Details</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end" page-blah="@Model.PageInfo" page-action="Index"></ul>
</nav>
