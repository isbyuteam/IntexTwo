@{
    ViewData["Title"] = "Crashes";
}

@model CrashViewModel

<h1>Crashes</h1>

<div class="row m-1 p-1">
    <div id="types" class="col-3">
        <vc:crashes></vc:crashes>
    </div>

    <div class="card-group col-9">
        @foreach (var crash in Model.Crashes)
        {
            <div class="col-xl-6 col-md-12 mb-4">
                <div class="card card-stats mb-4 mb-xl-0">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <h5 class="card-title text-uppercase text-muted mb-0">@crash.CRASH_ID</h5>
                                <span class="h3 font-weight-bold mb-0">@crash.CITY</span>
                            </div>
                            <div class="col-auto">
                                <a class="btn btn-outline-info btn-sm" asp-controller="Home" asp-action="CrashDetails" asp-route-crashid="@crash.CRASH_ID">Details</a>
                            </div>
                        </div>
                        <p class="mt-0 mb-0 text-muted text-sm">
                            <span class="text-nowrap">@crash.CRASH_DATE @crash.CRASH_TIME</span>
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation example">
    <ul class="pagination pagination-sm justify-content-center"
        page-blah="@Model.PageInfo"
        page-action="Crashes"
        page-class="btn"
        page-class-normal="btn-outline-secondary"
        page-class-selected="btn-secondary"
        page-classes-enabled="true"></ul>
</nav>

