@{
    ViewData["Title"] = "Create/Edit Crash";
}

@model IntexTwo.Models.CrashModel

<h1>Create/Edit Crash</h1>

<form method="post" class="mb-4">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label asp-for="CRASH_DATE">Date</label>
        <input type="text" class="form-control" asp-for="CRASH_DATE">
    </div>

    <div class="form-group">
        <label asp-for="CRASH_TIME">Time</label>
        <input type="text" class="form-control" asp-for="CRASH_TIME">
    </div>

    <div class="form-group">
        <label asp-for="ROUTE">Route</label>
        <input type="number" class="form-control" asp-for="ROUTE">
    </div>

    <div class="form-group">
        <label asp-for="MILEPOINT">Mile Point</label>
        <input step="any" type="number" class="form-control" asp-for="MILEPOINT">
    </div>

    <div class="form-group">
        <label asp-for="LAT_UTM_Y">Latitude</label>
        <input step="any" type="number" class="form-control" asp-for="LAT_UTM_Y">
    </div>

    <div class="form-group">
        <label asp-for="LONG_UTM_X">Longitude</label>
        <input step="any" type="number" class="form-control" asp-for="LONG_UTM_X">
    </div>

    <div class="form-group">
        <label asp-for="MAIN_ROAD_NAME">Road Name</label>
        <input type="text" class="form-control" asp-for="MAIN_ROAD_NAME" style="text-transform:uppercase">
    </div>

    <div class="form-group">
        <label asp-for="CITY">City</label>
        <input type="text" class="form-control" asp-for="CITY" style="text-transform:uppercase">
    </div>

    <div class="form-group">
        <label asp-for="COUNTY_NAME">County</label>
        <input type="text" class="form-control" asp-for="COUNTY_NAME" style="text-transform:uppercase">
    </div>

    <div class="form-group">
        <label asp-for="CRASH_SEVERITY_ID">Severity</label>
        <input step="any" type="number" class="form-control" asp-for="CRASH_SEVERITY_ID">
    </div>

    @if (ViewBag.Added == false)
    {
        <input type="hidden" asp-for="CRASH_ID" />
    }

    <a class="btn btn-secondary" role="button" asp-action="Index">Cancel</a>
    <button type="submit" class="btn btn-success">Submit</button>
</form>
